body {
    display: flex;
    justify-content: center;
    align-items: center;
}

.container {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.component-wrapper {
    width: 90%;
    height: 90%;
}

.item-value {
    border: 1rpx solid #000;
    padding: 0 2%;

    min-height: 1.5rem;
    word-break: break-all;
}

.edit-window .button-box {
    display: flex;
    justify-content: center;
}

